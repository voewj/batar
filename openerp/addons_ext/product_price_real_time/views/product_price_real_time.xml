	    	<field name="name">product price real time</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="res_model">product.price.real.time</field>
		   	<field name="view_type">form</field>
		   	<field name="view_mode">tree,form</field>
	    </record>
	    <menuitem id="product_price_real_time_menu" 
	        name="product price real time"
