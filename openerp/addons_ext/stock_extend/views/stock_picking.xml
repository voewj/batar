<?xml version="1.0" encoding='utf-8'?>
<openerp>
	<data>
	    <record id="stock_extend_view_form" model="ir.ui.view">
	        <field name="name">stock.extend.form.view</field>
	        <field name="model">stock.picking</field>
	        <field name="inherit_id" ref="stock.view_picking_form"></field>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='move_lines']//field[@name='product_id']" position='after'>
	                <field name="standrad_weight"></field>
	                <field name="item_fee"></field>
	            </xpath>
	        </field>
	    </record>
	</data>
</openerp>