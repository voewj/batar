<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    <record id="sale_order_form_extend" model="ir.ui.view">
	        <field name="name">sale.order.form.extend</field>
	        <field name="model">sale.order</field>
	        <field name="inherit_id" ref="sale.view_order_form"/>
	        <field name="arch" type="xml">
		        <data>
		            <xpath expr="//field[@name='partner_id']" position="attributes">
		                <attribute name="domain">[('is_company','=',True)]</attribute>
		                <attribute name="options">{'no_create':True,'no_open':True}</attribute>
		            </xpath>
	        	   	<xpath expr="//notebook/page/field[@name='order_line']/form/group/group//field[@name='product_id']" position="after">
	        	   	    <field name="item_fee"></field>
	        	   	    <field name="standrad_weight"></field>
	        	   	    <field name="sale_price"></field>
	        	   	</xpath>
	        	   	<xpath expr="//tree/field[@name='name']" position="attributes">
	        	   	    <attribute name="invisible">1</attribute>
	        	    </xpath>
	        	    <xpath expr="//tree/field[@name='price_unit']" position="after">
	        	        <field name='weight_fee'/>
	        	        <field name="item_fee"></field>
	    	            <field name="standrad_weight"></field>
	        	        <field name="sale_price" required='1'/>  
	        	        <field name='all_weights' readonly='1' placeholder="input wait for weighing"/>
	        	    </xpath>
	        	    <xpath expr="//tree/field[@name='price_unit']" position="attributes">
	        	       <attribute name="invisible">1</attribute>
	        	    </xpath>
        	    </data>
	        </field>
	    </record>
	   
	</data>
</openerp>