<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
	    <record id="product_template_extend_form" model="ir.ui.view">
	    	<field name="name">product.template.extend.form</field>
	    	<field name="model">product.template</field>
	    	<field name="inherit_id" ref="product.product_template_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <div name="options" position="inside">
	                    <div>
	                        <field name="ponderable"/>
	                        <label for="ponderable"/>
	                    </div>
	                </div>
	    	        <xpath expr="//notebook/page/group//field[@name='type']" position="before">
	    	            <field name="standard_weight" required='1'></field>
	    	        </xpath>
	    	        <xpath expr="//notebook/page/group//div[@name='standard_price_uom']" position="after">	            
	    	            <field name="item_fee" require="1"></field>
	    	        </xpath>
	    	    </data>
	    	</field>
	    </record>
	</data>
</openerp>