<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
	    <record id="product_template_extend_form" model="ir.ui.view">
	    	<field name="name">product.template.extend.form</field>
	    	<field name="model">product.template</field>
	    	<field name="inherit_id" ref="product.product_template_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <div name="options" position="inside">
	                    <div>
	                        <field name="ponderable"/>
	                        <label for="ponderable"/>
	                    </div>
	                    <div>
	                        <field name="active"/>
	                        <label for="active"/>
	                    </div>
	                </div>
	    	    </data>
	    	</field>
	    </record>
	    <record id="product_template_only_extend_form" model="ir.ui.view">
	    	<field name="name">product.template.extend.form</field>
	    	<field name="model">product.template</field>
	    	<field name="inherit_id" ref="product.product_template_only_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']/tree//field[@name='value_ids']" position="attributes">
	    	            <attribute name="options">{'no_create':True,'no_open':True}</attribute>
	    	            <attribute name="required">1</attribute>
	    	            <attribute name="placeholder">No attribute value needs to be created at the property value interface</attribute>
	    	        </xpath>
	    	    </data>
	    	</field>
	    </record>
	    <record id="product_product_tree_view" model="ir.ui.view">
	    	<field name="name">product</field>
	    	<field name="model">product.product</field>
	    	<field name="inherit_id" ref="product.product_product_tree_view"></field>
	    	<field name="arch" type="xml">
	    		<data>
	    		    <tree position="attributes">
	    		    	<attribute name="create">false</attribute>
	    		    </tree>
	    		    <field name="lst_price" position="replace">
	    		        <field name="sale_price" widget="monetary"></field>
	    		    </field>
	    		</data>
	    	</field>
	    </record>
	    <record id="product_product_extend_form" model="ir.ui.view">
	    	<field name="name">product.product.extend.form</field>
	    	<field name="model">product.product</field>
	    	<field name="inherit_id" ref="product.product_normal_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
					<form  position="attributes">
						<attribute name="create">false</attribute>
					</form>
	    	        <xpath expr="//field[@name='default_code']" position="before">
	    	            <field name="shang_code"></field>
	    	        </xpath>
	    	        <xpath expr="//field[@name='default_code']" position="attributes">
	    	            <attribute name="readonly">1</attribute>
	    	        </xpath>
	    	       
	    	        <xpath expr="//field[@name='lst_price']" position="before">
	    	            <field name="real_time_price_unit" widget="monetary" readonly="1" attrs="{'invisible':[('ponderable','=',False)]}"/> 
	    	        </xpath>
	    	        <xpath expr="//field[@name='lst_price']" position="attributes">
	    	            <attribute name="attrs">{'invisible':[('ponderable','=',True)]}</attribute>
	    	        </xpath>
	    	    </data>
	    	</field>
	    </record>
	</data>
</openerp>