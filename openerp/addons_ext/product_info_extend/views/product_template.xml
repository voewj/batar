<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
	    <record id="product_template_extend_form" model="ir.ui.view">
	    	<field name="name">product.template.extend.form</field>
	    	<field name="model">product.template</field>
	    	<field name="inherit_id" ref="product.product_template_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <div name="options" position="inside">
	                    <div>
	                        <field name="ponderable"/>
	                        <label for="ponderable"/>
	                    </div>
	                </div>
	    	        <xpath expr="//notebook/page/group//div[@name='standard_price_uom']" position="after">	 
	    	            
	    	            <field name="item_fee" require="1" ></field>
	    	            <field name='weight_fee'/>
	    	        </xpath>
	    	        
	    	    </data>
	    	</field>
	    </record>
	    <record id="product_product_extend_form" model="ir.ui.view">
	    	<field name="name">product.product.extend.form</field>
	    	<field name="model">product.product</field>
	    	<field name="inherit_id" ref="product.product_normal_form_view"></field>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <xpath expr="//field[@name='default_code']" position="before">
	    	            <field name="shang_code"></field>
	    	        </xpath>
	    	        <xpath expr="//field[@name='default_code']" position="attributes">
	    	            <attribute name="readonly">1</attribute>
	    	        </xpath>
	    	    </data>
	    	</field>
	    </record>
	</data>
</openerp>