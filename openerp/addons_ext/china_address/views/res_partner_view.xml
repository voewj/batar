<?xml version='1.0' encoding='utf-8'?>
<openerp>
	<data>
	    <record id="res_partner_address_form" model="ir.ui.view">
	    	<field name="name">res.partner.form.address</field>
	    	<field name="model">res.partner</field>
	    	<field name="priority" eval="10"></field>
	    	<field name="inherit_id" ref="base.view_partner_address_form"/>
	    	<field name="arch" type="xml">
	    	    <xpath expr="//div[@class='o_address_format']" position='replace'>
	    	        <field name="country_id" placeholder="country" />
	    	        <field name="province_id" placeholder="province" />
	    	        <field name="city_id" placeholder="city" />
	    	        <field name="district_id" placeholder="district" ></field>
	    	        <field name="street" class="o_address_street" placeholder="Street..."/>
	    	    </xpath>
	    	</field>
	    </record>
	</data>
</openerp>