<?xml version='1.0' encoding='utf-8'?>
<openerp>
	<data>
	    <menuitem id="stock_qc_top_menu" sequence='31' name="Quality Check"/>
	    <menuitem id="stock_qc_menu" name="Quality Check" parent="stock_qc_top_menu"/>
	    
	    <record id="stock_qc_form_view" model="ir.ui.view">
	    	<field name="name">stock quality check</field>
	    	<field name="model">stock.picking</field>
	    	<field name="arch" type="xml">
	    	    <form string="stock quality check">
	    	        <header>
	    	            <field name="state" widget="statusbar" 
	    	                statusbar_visible="draft,confirmed,partially_available,assigned,done" 
	    	                statusbar_colors="{&quot;shipping_except&quot;:&quot;red&quot;,&quot;invoice_except&quot;:&quot;red&quot;,&quot;waiting_date&quot;:&quot;blue&quot;}"/>
	    	        </header>
	    	        <sheet>
	    	            <div class="oe_button_box" name="button_box"></div>
	    	            <h1>
	    	                <field name="name" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
	    	            </h1>
	    	            <group>
	    	                <group>
	    	            	    <field name="qc_date"></field>
	    	            	    <field name="qc_checker"></field>
	    	            	    <field name="qc_result"></field>
	    	            	</group>
	    	            	<group>
	    	            	    <field name="partner_id" domain="[('supplier','=',True)]"/>
	    	            	    <field name="location_id"></field>
	    	            	    <field name="location_dest_id"></field>
	    	            	</group>
	    	            	<group>
	    	            		<field name="qc_note"></field>
	    	            	</group>
	    	            </group>
	    	        </sheet>
	    	    </form>
	    	</field>
	    </record>
	    <record id="stock_qc_tree_view" model="ir.ui.view">
	    	<field name="name">stock quality check</field>
	    	<field name="model">stock.picking</field>
	    	<field name="arch" type="xml">
	    	    <tree string="stock quality check">
	    	        <field name="partner_id"></field>
	    	        <field name="location_id"></field>
	    	        <field name="location_dest_id"></field>
	    	        <field name="qc_result"></field>
	    	        <field name="qc_date"></field>
	    	        <field name="qc_checker"></field>
	    	        <field name="qc_result"></field>
	    	    </tree>
	    	</field>
	    </record>
	    <record id="stock_qc_action" model="ir.actions.act_window">
	    	<field name="name">stock quality check</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="res_model">stock.picking</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
	    </record>
	    <record id="stock_qc_action_view_tree" model="ir.actions.act_window.view">
	         <field name="sequence">1</field>
	         <field name="view_mode">tree</field>
	         <field name='view_id' ref='stock_qc_tree_view'/>
	         <field name="act_window_id" ref="stock_qc_action"/>
	     </record>
	
	     <record id="stock_qc_action_view_form" model="ir.actions.act_window.view">
	         <field name="sequence">2</field>
	         <field name="view_mode">form</field>
	         <field name="view_id" ref="stock_qc_form_view"/>
	         <field name="act_window_id" ref="stock_qc_action"/>
	    </record>
	    <menuitem action="stock_qc_action" name="stock quality check" id="stock_qc_menu_action" parent="stock_qc_menu"/>
	</data>
</openerp>