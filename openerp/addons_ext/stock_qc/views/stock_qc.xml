<?xml version='1.0' encoding='utf-8'?>
<openerp>
	<data>
	    <record id="stock_quality_check_form" model="ir.ui.view">
	    	<field name="name">stock.picking</field>
	    	<field name="model">stock.picking</field>
	    	<field name="inherit_id" ref="stock.view_picking_form"/>
	    	<field name="arch" type="xml">
	    	    <data>
	    	        <xpath expr="//sheet/group/group[last()]" position="after">
	    	        	<group string='quality check result' attrs="{'invisible':[('is_quality','=',False)]}">
	    	        	    <field name="is_quality" readonly="1"></field>
	    	        	    <field name="qc_result" required='1'></field>
	    	        	    <field name="qc_date" required='1'></field>
	    	        	    <field name="qc_checker" required='1'></field>
	    	        	</group>
	    	        	<group string='quality check result note' attrs="{'invisible':[('is_quality','=',False)]}">
	    	        	    <field name="qc_note"></field>
	    	        	</group>
	    	        </xpath>
	    	        <xpath expr="//notebook/page[2]" position="attributes">
	    	            <attribute name="attrs">{'invisible':[('is_quality','=',True)]}</attribute>
	    	        </xpath>
	    	        <xpath expr="//field[@name='pack_operation_product_ids']/tree//field[@name='product_qty']" position="after">
	    	            <field name='all_stand_weight' readonly='1'/>
	    	            <field name="pass_qty" required='1'/>
	    	            <field name="back_qty" />
	    	            <field name="receive_weight" required='1'/>
	    	            <field name='back_weight' />
	    	            <field name="qc_result" readonly='1'/>
	    	        </xpath>
	    	    </data>
	    	</field>
	    </record>
	</data>
</openerp>