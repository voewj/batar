<?xml version='1.0' encoding='utf-8'?>
<openerp>
	<data>
	    <!-- actin绑定原有的视图 -->
	    <record id="stock_picking_action_picking_type_tree" model="ir.actions.act_window.view">
	    	<field name="view_mode">tree</field>
	    	<field name="sequence">1</field>
	    	<field name="view_id" ref="stock.vpicktree"></field>
	    	<field name="act_window_id" ref="stock.stock_picking_action_picking_type"></field>
	    </record>
	    <record id="stock_picking_action_picking_type_kanban" model="ir.actions.act_window.view">
	    	<field name="view_mode">kanban</field>
	    	<field name="sequence">1</field>
	    	<field name="view_id" ref="stock.stock_picking_kanban"></field>
	    	<field name="act_window_id" ref="stock.stock_picking_action_picking_type"></field>
	    </record>
	    <record id="stock_picking_action_picking_type_calendar" model="ir.actions.act_window.view">
	    	<field name="view_mode">calendar</field>
	    	<field name="sequence">1</field>
	    	<field name="view_id" ref="stock.stock_picking_calendar"></field>
	    	<field name="act_window_id" ref="stock.stock_picking_action_picking_type"></field>
	    </record>
	    <record id="stock_picking_action_picking_type_form" model="ir.actions.act_window.view">
	    	<field name="view_mode">form</field>
	    	<field name="sequence">1</field>
	    	<field name="view_id" ref="stock.view_picking_form"></field>
	    	<field name="act_window_id" ref="stock.stock_picking_action_picking_type"></field>
	    </record>
	    <!-- 质检 -->
	    
	    <menuitem id="top_menu_quanlity_check" name="Quanlity Check" />
	    <!-- 质检tree和form视图 -->
	    <record id="stock_picking_quanlity_check_tree" model="ir.ui.view">
	    	<field name="name">Quanlity Check</field>
	    	<field name="model">stock.picking</field>
	    	<field name="arch" type="xml">
	    	    <tree string="Quanlity Check">
	    	        <field name="name"></field>
	    	        <field name="location_dest_id"></field>
	    	        <field name="partner_id"></field>
	    	        <field name="qc_result"></field>
	    	        <field name="qc_date"></field>
	    	        <field name="qc_checker"></field>
	    	        <field name="origin"></field>
	    	        <field name="state"></field>
	    	    </tree>
	    	</field>
	    </record>
	    <record id="stock_picking_quanlity_check_form" model="ir.ui.view">
	    	<field name="name">Quanlity Check</field>
	    	<field name="model">stock.picking</field>
	    	<field name="arch" type="xml">
	    	    <form string="Quanlity Check">
	    	        <header>
	    	           <button name="action_quanlity_confirm" states="confirmed,waiting,partially_available" string="quanlity check confirm"/>
	    	           <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,partially_available,assigned,done" statusbar_colors='{"shipping_except":"red","invoice_except":"red","waiting_date":"blue"}'/>
	    	        </header>
	    	        <sheet>
	    	            <div class="oe_button_box" name="button_box">
	                    </div>
	                    <h1>
	                        <field name="name" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
	                    </h1>
	    	        </sheet>
	    	    </form>
	    	</field>
	    </record>
	    <record id="action_stock_quanlity_check" model="ir.actions.act_window">
	    	<field name="name">Quanlity Check</field>
	    	<field name="res_model">stock.picking</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="view_type">form</field>
	    	<field name="sequence">2</field>
	    	<field name="view_mode">tree,form</field>
	    	<field name="domain">[('is_quality','=',True)]</field>
	    </record>
	    <record id="action_stock_quanlity_check_tree" model="ir.actions.act_window.view">
	    	<field name="view_mode">tree</field>
	    	<field name="sequence">2</field>
	    	<field name="view_id" ref="stock_picking_quanlity_check_tree"/>
	    	<field name="act_window_id" ref="action_stock_quanlity_check"/>
	    </record>
	    <record id="action_stock_quanlity_check_form" model="ir.actions.act_window.view">
	    	<field name="view_mode">form</field>
	    	<field name="view_id" ref="stock_picking_quanlity_check_form"/>
	    	<field name="act_window_id" ref="action_stock_quanlity_check"/>
	    </record>
	    <menuitem id="menu_quanlity_check_dashboard" name="Quanlity Check" parent="top_menu_quanlity_check" sequence="30" action="action_stock_quanlity_check"/>
	    
	</data>
</openerp>