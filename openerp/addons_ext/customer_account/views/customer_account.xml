<?xml version='1.0' encoding='utf-8'?>
<openerp>
	<data>
	    <record id="customer_account_view_tree" model="ir.ui.view">
	    	<field name="name">customer account</field>
	    	<field name="model">customer.account</field>
	    	<field name="arch" type="xml">
	    	    <tree string="customer account">
	    	        <field name="partner_id"></field>
	    	        <field name="record_type"></field>
	    	        <field name="category_id"></field>
	    	        <field name="weight"></field>
	    	        <field name="amount_money"></field>
	    	        <field name="sale_id"></field>
	    	        <field name="picking_id"></field>
	    	        <field name="account_id"></field>
	    	        <field name="interest_rate_money"></field>
	    	        <field name="interest_rate_stock"></field>
	    	        <field name="active"/>
	    	    </tree>
	    	</field>
	    </record>
	    <record id="customer_account_view_form" model="ir.ui.view">
	    	<field name="name">customer account</field>
	    	<field name="model">customer.account</field>
	    	<field name="arch" type="xml">
	    	    <form string="customer account">
	    	        <sheet>
	    	            <group>
	    	            	<group>
	    	            	    <field name="partner_id"></field>
				    	        <field name="record_type"></field>
				    	        <field name="category_id"></field>
				    	        <field name="weight"></field>
				    	        <field name="amount_money"></field>
				    	        <field name="sale_id"></field>
	    	            	</group>
	    	            	<group>
	    	            	    <field name="picking_id"></field>
				    	        <field name="account_id"></field>
				    	        <field name="interest_rate_money"></field>
				    	        <field name="interest_rate_stock"></field>
				    	        <field name="active"/>
	    	            	</group>
	    	            	
	    	            </group>
	    	        </sheet>
	    	    </form>
	    	</field>
	    </record>
		<record id="action_customer_account_view" model="ir.actions.act_window">
			<field name="name">customer account info</field>
			<field name="res_model">customer.account</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
		</record>
		<record id="res_partner_form_extend_account" model="ir.ui.view">
            <field name="name">res.partner.view.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(action_customer_account_view)d" 
                        attrs="{'invisible': [('customer', '=', False)]}"
                        domain="[('partner_id','=',partner_id)]"
                        string='account info'
                        icon="fa-rmb">
                      
                    </button>     
                </div>
            </field>
        </record>
