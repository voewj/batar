<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    <record id="partner_customer_goods_discount_view_buttons" model="ir.ui.view">
	    	<field name="name">partner.coustomer.goods.discount.buttons</field>
	    	<field name="model">res.partner</field>
	    	<field name="inherit_id" ref="base.view_partner_form"></field>
	    	<field name="priority" eval="20"></field>
	    	
	    	<field name="arch" type="xml">
	    	   <div name="button_box" position="inside">
	    	       <button class="oe_stat_button" 
	    	            type="action" 
	    	            icon="fa-list"
	    	            name="%(customer_goods_discount.customer_goods_discount_tree)d"
	    	            context="{'search_default_partner_id': active_id,'default_partner_id': active_id}"
	    	            >
	    	        	<field string="Discount Goods" name='discount_product_count' widget="statinfo"></field>
	    	        </button>
	    	   </div>
	    	</field>
	    	
	    </record>
	    
	</data>
</openerp>