<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    <record id="customer_goods_discount_tree" model="ir.ui.view">
	        <field name="name">customer.goods.discount.tree</field>
	        <field name="model">customer.discount.product</field>
	        <field name="arch" type="xml">
	            <tree string="Customer Goods Discount Tree">
	                <field name="customer_code"></field>
	                <field name="partner_id"></field>
	                <field name="product_id"></field>
	               
	                <field name="discount_weight_fee"></field>
	                <field name="discount_weight_fee_enable"></field>
	                <field name="discount_item_fee"></field>
	                <field name="discount_item_fee_enable"></field>
	                <field name="discount_item_percent"></field>
	                <field name="discount_item_percent_enable"></field>
	            </tree>
	        </field>
	    </record>
	    <record id="customer_goods_discount_form" model="ir.ui.view">
	        <field name="name">customer.goods.discount.form</field>
	        <field name="model">customer.discount.product</field>
	        <field name="arch" type="xml">
	            <form string="Customer Goods Discount Tree">
	                <group>
	                	<group>
	                	    <field name="partner_id" filter_domain="[('partner_id.supplier', '=', True)]"/>
			                <field name="product_id"></field>
			        
			                <field name="discount_weight_fee"></field>
			                <field name="discount_weight_fee_enable"></field>
	                	</group>
	                	<group>
	                	    <field name="discount_item_fee"></field>
			                <field name="discount_item_fee_enable"></field>
			                <field name="discount_item_percent"></field>
			                <field name="discount_item_percent_enable"></field>
	                	</group>
	                </group>
	                
	                
	            </form>
	        </field>
	    </record>
	    <record id="action_customer_goods_discount" model="ir.actions.act_window">
	    	<field name="name">Customer Product Discount</field>
	    	<field name="type">ir.actions.act_window</field>
	    	<field name="res_model">customer.discount.product</field>
	    	<field name="view_type">form</field>
	    	<field name="view_mode">tree,form</field>
	    </record>
	    <menuitem action="action_customer_goods_discount" 
	        id="customer_product_discount_menu" 
	        name="Customer Product Discount" 
	        parent="product_menu.left_menu_product_products"/>
	</data>
</openerp>